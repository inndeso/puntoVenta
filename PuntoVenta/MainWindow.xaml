<Window x:Class="PuntoVenta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Punto de Venta"
        Height="600"
        Width="1000"
        MinWidth="800"
        MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="12" Background="#FFFFFF" BorderBrush="#B0BEC5" BorderThickness="1">
        <Grid>

            <!-- HEADER -->
            <DockPanel LastChildFill="True" Height="50" Background="#2196F3" VerticalAlignment="Top">
                <TextBlock Text="Punto de Venta" Foreground="White" FontSize="20" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="15,0"/>
                <Button Content="X" Width="40" Height="40" DockPanel.Dock="Right" 
                        Background="Transparent" Foreground="White"
                        BorderBrush="{x:Null}" FontWeight="Bold"
                        Cursor="Hand"/>
            </DockPanel>

            <!-- CONTENIDO PRINCIPAL -->
            <Grid Margin="0,50,0,0">
                <Grid.RowDefinitions>
                    <!-- Zona de botones arriba -->
                    <RowDefinition Height="Auto"/>
                    <!-- Zona de información abajo -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ✅ Botones compactos -->
                <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"
                              Grid.Row="0" Margin="0,10,0,0">
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="10">

                        <!-- 🔵 BOTÓN VENTA -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#2196F3" Foreground="White"
                                Width="180" Height="80" Margin="10"
                                Cursor="Hand"
                                Click="Venta_Click">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Cart" Width="28" Height="28" HorizontalAlignment="Center"/>
                                <TextBlock Text="VENTA" FontWeight="Bold" FontSize="13"
                                           HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- 🟣 REPORTE -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#9C27B0" Foreground="White"
                                Width="180" Height="80" Margin="10"
                                Cursor="Hand">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="CreditCard" Width="28" Height="28" HorizontalAlignment="Center"/>
                                <TextBlock Text="REPORTE" FontWeight="Bold" FontSize="13"
                                           HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- 🟠 INVENTARIO -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#FF9800" Foreground="White"
                                Width="180" Height="80" Margin="10"
                                Cursor="Hand">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="ClipboardList" Width="28" Height="28" HorizontalAlignment="Center"/>
                                <TextBlock Text="INVENTARIO" FontWeight="Bold" FontSize="13"
                                           HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- ⚫ IMPRIMIR -->
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#607D8B" Foreground="White"
                                Width="180" Height="80" Margin="10"
                                Cursor="Hand">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Printer" Width="28" Height="28" HorizontalAlignment="Center"/>
                                <TextBlock Text="IMPRIMIR" FontWeight="Bold" FontSize="13"
                                           HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </ScrollViewer>

                <!-- ✅ Zona de información -->
                <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Margin="15" Padding="15" BorderBrush="#CFD8DC" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Escanee un código de barras:" FontSize="16" Foreground="#37474F" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <!-- TextBox oculto hasta que presionamos VENTA -->
                        <TextBox x:Name="CodigoTextBox" Width="300" Height="40" FontSize="18"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                 Visibility="Collapsed"
                                 
                               />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
